#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Set the version if it is unset.
[ -z "$version" ] && version=2.3.2

# Install Leiningen.
curl "https://raw.github.com/technomancy/leiningen/${version}/bin/lein" | sh

client_result "Leiningen has been installed."
